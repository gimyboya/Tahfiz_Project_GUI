<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Classes.TeacherpanelController">
  <children>
    <MenuBar nodeOrientation="RIGHT_TO_LEFT" VBox.vgrow="ALWAYS">
      <menus>
        <Menu mnemonicParsing="false" text="New">
          <items>
            <MenuItem mnemonicParsing="false" text="Memorization" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Logout" />
      </menus>
    </MenuBar>
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <ListView fx:id="sectionList" prefHeight="200.0" prefWidth="200.0" />
            <ListView fx:id="childrenList" prefHeight="200.0" prefWidth="200.0" />
            <TableView prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
              <columns>
                <TableColumn minWidth="200.0" prefWidth="200.0" text="Memorization" />
              </columns>
            </TableView>
         </children>
      </HBox>
  </children>
</VBox>
